@model IList<Doan1.Models.OderDetai> ;
@using Doan1.Ulitities;
@{
    IList<Book> book = ViewBag.Book;
}

<section class="shop-cart spad">
	
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shop__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Ảnh</th>
                                    <th>Tên Sản phẩm</th>
                                    <th>Giá tiền</th>
                                    <th>Số lượng</th>
                                    <th>Tổng </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                    @{
                                        int i = 1;
                                        decimal tt = 0;
                                    }

                                    @foreach(var items in Model){
                                        tt += items.IntoMoney;
                                        var pd = book.FirstOrDefault(p => p.BookID == items.BookId);
                                    <tr>

                                        <td class="cart__product__item">
                                            <img src="@pd.Image" alt="" style="max-width: 100px; max-height: 100px;">
                                            <div class="cart__product__item__title">
                                                <h6>@pd.BookName</h6>
                                            </div>
                                        </td>

                                        <td class="cart__price">@((pd.Price -(pd.PriceSale )))</td>
                                        <td class="">
                                            <div class="product__details__button">
                                                <div class="quantity">
                                                    <div class="pro-qty" style="margin-top:35px">
                                                    <input type="text" value="@items.Quantity">
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="cart__total">@items.IntoMoney VNĐ</td>
                                     </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="cart__btn">
                        <a href="/Oder/ListOder">Quay lại</a>
                    </div>
                </div>
            </div>
            <div class="row">    
                <div class="col-lg-6 offset-lg-2">
                    <div class="cart__total__procced">
                        <ul>
                            <li>Tổng cộng : <span>@tt VNĐ</span></li>
                        </ul>
                        
                    </div>
                </div>
            </div>
        </div>
    
</section
