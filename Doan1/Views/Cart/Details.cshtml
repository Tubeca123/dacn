@model Cart
@using Doan1.Areas.Admin.Models
@{
    Account profile = ViewBag.Profile;
}

@using Doan1.Ulitities;
    <!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <form asp-controller="Oder" asp-action="Order" class="checkout__form">
            <div class="row">
                <div class="col-lg-8">
                    <h5>Chi tiết đơn hàng</h5>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Họ Tên <span>*</span></p>
                                <input type="text" value="@profile.FullName @profile.AccountId" readonly>
                            </div>
                        </div>
                        
                        <div class="col-lg-12">
                            <div class="checkout__form__input">
                                <p>Địa chỉ <span>*</span></p>
                                <input type="text" value="@profile.Address">

                            </div>  
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Số điện thoại <span>*</span></p>
                                <input type="text" value="@profile.Phone">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Email <span>*</span></p>
                                <input type="text" value="@profile.Email" readonly>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="checkout__order">
                        <h5>Đơn hàng của bạn</h5>
                        
                        <div class="checkout__order__product">
                            <ul>
                                <li>
                                    <span class="top__text">Sản phẩm</span>
                                    <span class="top__text__right">Tổng</span>
                                </li>
                                @foreach (var lines in Model.Lines)
                                {
                                    <li> @lines.Product.BookName <span>@(lines.Product.Price * lines.Quantity)</span></li>
                                }
                            </ul>

                        </div>
                        <div class="checkout__order__total">
                            <ul>
                                <li>Tổng tiền <span>@Model.ComputeTotalValue() VNĐ</span></li>
                            </ul>
                        </div>
                        <button type="submit" class="site-btn">Đặt hàng</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<!-- Checkout Section End -->