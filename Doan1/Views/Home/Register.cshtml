@model Doan1.Areas.Admin.Models.Account;
@using Doan1.Ulitities;

<section style="margin-bottom: 8%">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="~/files/img/blog/blog-3.jpg" class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form asp-controller="Home" asp-action="Register" method="post">
                    
                    <div class="form-outline mb-4">
                        <input type="text" asp-for="UserName" class="form-control form-control-lg" />
                        <label class="form-label">Tên của bạn</label>
                    </div>

                    <div class="form-outline mb-4">
                        <input type="email" asp-for="Email" class="form-control form-control-lg" />
                        <label class="form-label">Email đăng ký</label>
                    </div>

                    <div class="form-outline mb-4">
                        <input type="password" asp-for="Password" class="form-control form-control-lg" />
                        <label class="form-label">Mật Khẩu</label>
                    </div>

                    <div class="form-group d-none">
                        <input asp-for="RoleID" class="form-control" value="2" />
                        <input asp-for="IsActive" class="form-control" value="True" />
                    </div>

                    <div class="col-12 text-center text-danger">
                        <h6>
                            @Functions._MessageEmail
                        </h6>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg btn-block" name="dang_ky">Đăng Ký</button>
                </form>
            </div>
        </div>
    </div>
</section>
