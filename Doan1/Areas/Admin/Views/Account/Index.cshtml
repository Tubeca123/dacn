@model IEnumerable<Doan1.Areas.Admin.Models.Account>
@using Doan1.Ulitities;
<main id="main" class="main">
    <div class="Pagetitle">
        <h2>Danh sach Người dùng</h2>
    </div>

    <p>
        <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="Menu" asp-action="Create">
            <i class="bi bi-file-earmark-text me-1">  Them Quản trị viên</i>
        </a>
    </p>

    <section class="section dashboard">
        <div class="row">
            <div col-12>
                <div class="card recent-sales overflow-auto">
                    <div class="card-boy mt-4">
                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th class="col-1 text-center">Mã tài khoản</th>
                                    <th class="col-3 text-center">Tên người dùng </th>
                                    <th class="col-1 text-center">Vai trò</th>
                                    <th class="col-1 text-center">Ẩn/Hiện</th>
                                    <th class="col-2 text-center">Chức Năng</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th class="text-center" scope="row">@item.AccountId</th>
                                        <td>
                                            <a asp-area="Admin" asp-controller="Menu" asp-action="Details"
                                               asp-route-id="@item.AccountId" class="text-primary">@item.FullName</a>
                                        </td>
                                        <td class="text-center">Người dùng</td>
                                        <td class="text-center">Hoạt động</td>
                                        <td class="text-center">
                                            <a asp-area="Admin" asp-controller="Account" asp-action="EditProfile"
                                               asp-route-id="@item.AccountId" class="btn btn-primary btn-sm"
                                                >
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>

    </section>
</main>