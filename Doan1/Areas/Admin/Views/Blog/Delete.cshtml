@model Doan1.Models.Blog

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Xóa bài viết</h2>
    </div>
    <main id="main" class="main">
        <div class="pagetitle">
            <h2>Xác nhận xóa bài viết</h2>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Mã bài viết</label>
            <div class="col-sm-10">
                <input asp-for="PostID" type="text" class="form-control">
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Tiêu đề</label>
            <div class="col-sm-10">
                <input asp-for="Title" type="text" class="form-control">
            </div>
        </div>

        <!-- Begin Form -->
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="PostID" />
            <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
                <i class="bi bi-arrow-left-circle"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-lg btn-danger p-2">
                <i class="bi bi-trash-fill"></i> Xóa thể loại
            </button>
        </form>
        <!-- End Form -->
    </main>
</div>
